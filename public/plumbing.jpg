<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <!-- Dark Industrial Background -->
  <rect width="800" height="600" fill="#2C2C2C"/>
  
  <!-- Pipes -->
  <rect x="100" y="200" width="600" height="40" fill="#4A4A4A" rx="5"/>
  <rect x="200" y="280" width="400" height="40" fill="#4A4A4A" rx="5"/>
  
  <!-- Rusty Metal Pipe Close-up -->
  <rect x="350" y="180" width="120" height="80" fill="#8B4513" rx="5"/>
  <rect x="360" y="200" width="100" height="40" fill="#654321"/>
  
  <!-- Water Spray Effect -->
  <defs>
    <linearGradient id="waterGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#B0E0E6;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#87CEEB;stop-opacity:0.3" />
    </linearGradient>
  </defs>
  
  <!-- Spray Area -->
  <ellipse cx="410" cy="220" rx="80" ry="60" fill="url(#waterGradient)"/>
  
  <!-- Water Droplets -->
  <circle cx="380" cy="210" r="4" fill="#87CEEB" opacity="0.7"/>
  <circle cx="420" cy="195" r="5" fill="#87CEEB" opacity="0.6"/>
  <circle cx="440" cy="205" r="4" fill="#87CEEB" opacity="0.7"/>
  <circle cx="465" cy="215" r="5" fill="#87CEEB" opacity="0.6"/>
  
  <!-- Hands Working on Pipe -->
  <ellipse cx="385" cy="260" rx="25" ry="35" fill="#D4A574" transform="rotate(-20 385 260)"/>
  <ellipse cx="435" cy="265" rx="25" ry="35" fill="#D4A574" transform="rotate(20 435 265)"/>
  
  <!-- Wrench/Tool -->
  <rect x="450" y="250" width="40" height="8" fill="#C0C0C0"/>
  <rect x="487" y="248" width="6" height="12" fill="#C0C0C0"/>
  
  <!-- Text -->
  <text x="400" y="550" font-size="24" fill="#FFF" text-anchor="middle" font-weight="bold">Plumbing Works</text>
</svg>

