<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <!-- Sunset Sky Gradient -->
  <defs>
    <linearGradient id="sunsetGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#FF6B35;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#F7931E;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#FFD93D;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <rect width="800" height="600" fill="url(#sunsetGradient)"/>
  
  <!-- Utility Pole -->
  <rect x="400" y="150" width="20" height="250" fill="#8B4513"/>
  <rect x="405" y="140" width="10" height="20" fill="#333"/>
  
  <!-- Power Lines -->
  <line x1="100" y1="200" x2="700" y2="200" stroke="#333" stroke-width="4"/>
  <line x1="100" y1="300" x2="700" y2="300" stroke="#333" stroke-width="4"/>
  <line x1="100" y1="250" x2="700" y2="250" stroke="#333" stroke-width="4"/>
  
  <!-- Bucket Lift with Worker -->
  <rect x="150" y="180" width="80" height="40" fill="#FFF" opacity="0.9"/>
  <rect x="155" y="185" width="70" height="30" fill="#FFD700"/>
  
  <circle cx="180" cy="200" r="15" fill="#000"/>
  <rect x="170" y="220" width="20" height="40" fill="#000"/>
  
  <!-- Second Worker -->
  <circle cx="620" cy="200" r="15" fill="#000"/>
  <rect x="610" y="220" width="20" height="40" fill="#000"/>
  
  <!-- Safety Vest -->
  <rect x="145" y="180" width="90" height="50" fill="#FFD700" opacity="0.3"/>
  
  <!-- Text -->
  <text x="400" y="550" font-size="24" fill="#FFF" text-anchor="middle" font-weight="bold">Electrical Works</text>
</svg>

